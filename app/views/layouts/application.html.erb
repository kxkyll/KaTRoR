<!DOCTYPE html>
<html>
<head>
  <title>Ratebeer</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
    <div class="navi">
        <%=link_to 'breweries', breweries_path %>
        <%=link_to 'beers', beers_path %>
        <%=link_to 'ratings', ratings_path %>
        <%=link_to 'users', users_path %>|
        <% if not session[:user_id].nil? %>
          <%= link_to User.find(session[:user_id]).username.titleize, User.find(session[:user_id]) %> 
          <%=link_to 'rate a beer', new_rating_path %>
          <%=link_to 'signout', signout_path %>
        <% else %>
          <%=link_to 'signin', signin_path %>
          <%=link_to 'signup', signup_path %>
          
        <% end %>
        
    </div>
    

<%= yield %>

</body>
</html>
